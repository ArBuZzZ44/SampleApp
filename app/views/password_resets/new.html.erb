<% provide(:title, "Forgot password") %>
<h1>Forgot password</h1>

<div class="form-center row">
	<div class="col-md-5">
		<%= form_with url: password_resets_path do |f| %>

			<%= f.label :email %>
			<%= f.email_field :email, class: "form-control" %>

			<%= f.submit "Submit", class: "btn rounded-5 btn-primary form-center", style: "width:30%; height: 50px" %>
		<% end %>
	</div>
</div>
