<header class="navbar navbar-fixed-top bg-dark">
	<div class="container">
		<%= link_to "sample app", root_path, id: "logo", class: "navbar-brand" %>
		<nav class="navbar navbar-expand-sm">
			<ul class="navbar-nav me-auto mb-2 mb-sm-0">
				<li class="nav-item"><%= link_to "Home",   root_path, class: "nav-link text-white" %></li>
				<li class="nav-item"><%= link_to "Help",   help_path, class: "nav-link text-white" %></li>
				<% if logged_in? %>
          <li class="nav-item"><%= link_to "Users", '#', class: "nav-link text-white" %></li>
          <li class="dropdown">
            <%= link_to "Account" ,'#', class: "nav-link dropdown-toggle text-white",
								data: {"bs-toggle": "dropdown"} %>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user, class: "dropdown-item" %></li>
              <li><%= link_to "Settings", '#', class: "dropdown-item" %></li>
              <li class="dropdown-divider"></li>
              <li>
                <%= link_to "Log out", logout_path, class: "dropdown-item", method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path, class: "nav-link text-white" %></li>
        <% end %>
			</ul>
		</nav>
	</div>
</header>